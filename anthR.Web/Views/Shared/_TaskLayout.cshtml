@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Task Admin";
}


@section head{
    <link href="~/content/styles/bootstrap-datetimepicker.css" rel="stylesheet" />
    @RenderSection("head", required: false)
}

@RenderBody()

@section scripts{
   
    <script src="~/scripts/moment.js"></script>
    <script src="~/scripts/bootstrap-datetimepicker.js"></script>
    <script>
        $(function () {
            // reference http://eonasdan.github.io/bootstrap-datetimepicker/ events
            $('.datetimepicker').datetimepicker().on('dp.change', function (e) {
                // catch start date change to update deadline
                if (e.currentTarget.firstElementChild.id === 'PlannedStart') {                    
                    // update deadline                       
                    $('#Deadline-parent').data('DateTimePicker').setMinDate(e.date);
                    $('#Deadline-parent').data('DateTimePicker').setDate(e.date);
                }
            });            
        });
    </script>
    @RenderSection("scripts", required: false)
}


