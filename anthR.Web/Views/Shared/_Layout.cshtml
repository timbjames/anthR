<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="shortcut icon" href="/favicon.ico?v=1"> 

    <title>anthR. @ViewBag.Title</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")   

    @RenderSection("head", required: false)

</head>
<body class="background-dark">

    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="/" class="navbar-brand">
                    <i class="glyphicon glyphicon-home"></i>
                    <img src="~/Content/livery/anthr-logo.png" alt="anthR" />
                </a>
            </div>
            <div class="navbar-collapse collapse">
                @if (User.Identity.IsAuthenticated)
                {
                    <ul class="nav navbar-nav">
                        <li>@Html.ActiveActionLink("Projects", "Index", "Projects")</li>
                        <li>@Html.ActiveActionLink("Tasks", "Index", "Tasks")</li>
                        <li>@Html.ActiveActionLink("Schedule", "Index", "Schedule")</li>
                        <li>@Html.ActiveActionLink("Notes", "Index", "Notes")</li>
                        <li>@Html.ActiveActionLink("Master Site", "Index", "MasterSite")</li>
                        <li>@Html.ActiveActionLink("Staff", "Index", "Staff")</li>
                        <li>@Html.ActiveActionLink("Monthy Timesheet", "Show", new { controller = "Timesheets", month = DateTime.Now.Month })</li>
                    </ul>                               
                    <ul class="nav navbar-nav navbar-right">
                        <li class="dropdown">                                  
                            <a href="" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="true" style="padding-top: 10px; padding-bottom: 10px;">                               
                                @{Html.RenderAction("StaffGravatar", "Staff");}
                                Hello, @User.Identity.Name.Replace("KFS\\", "")!  
                                <span class="caret"></span>                                  
                            </a>                                
                            <ul class="dropdown-menu">
                                <li><a href="/account/logout">Logout</a></li>
                            </ul>                                
                        </li>
                    </ul>                       
                    
                }                
            </div>
        </div>
    </div>

    @Html.Partial("_BreadCrumb")

    <div class="container body-content">

        @RenderBody()

        <div id="searchBox"
             style="position: absolute; top: 50px; width: 1140px; padding: 12px; background-color: rgba(255,255,255,.75); display: none;">

            <form>

                <div class="form-group">
                    <input type="text" placeholder="Search..." id="search" class="form-control" style="max-width: none;" />
                </div>
                <button type="button" class="btn btn-default" aria-label="Left Align">
                    <span class="glyphicon glyphicon-remove close-search" aria-hidden="true"></span>
                </button>

            </form>

        </div>

        <hr />

        <footer>
            <p>&copy; @DateTime.Now.Year - anthR app</p>
        </footer>

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script>
        var _username = '@HttpContext.Current.User.Identity.Name.ToLower().Replace("kfs\\", "")';
    </script>
    @Scripts.Render("~/bundles/app")

    @*<script src="~/Scripts/jquery.signalR-2.2.0.min.js"></script>
        <script src="~/Scripts/myLibs/notifyR.js"></script>
        <script src="/signalr/js"></script>*@

    @RenderSection("scripts", required: false)

</body>



</html>
