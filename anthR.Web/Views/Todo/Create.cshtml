@model anthR.Web.Models.Todo.TodoItemEditModel
    
@{
    ViewBag.Title = "Create a ToDo Item";
}

@using (Html.BeginForm("Create", "ToDo", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken();

    <div class="form-group">
        @Html.LabelFor(x => x.MastersiteId, new { @class = "col-sm-1 control-label" })
        <div class="col-sm-11">
            @Html.DropDownListFor(x => x.MasterSites.First().MasterSiteId, new SelectList(Model.MasterSites, "MastersiteId", "Name"), "Select", new { @class = "form-control" })
        </div>        
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Title, new { @class = "col-sm-1 control-label" })
        <div class="col-sm-11">
            @Html.EditorFor(x => x.Title)
        </div>        
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Description, new { @class = "col-sm-1 control-label" })
        <div class="col-sm-11">
            @Html.EditorFor(x => x.Description)
        </div>        
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Deadline, new { @class = "col-sm-1 control-label" })
        <div class="col-sm-3">
            @Html.EditorFor(x => x.Deadline)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.IsDone, new { @class = "col-sm-1 control-label" })
        <div class="col-sm-11">
            @Html.EditorFor(x => x.IsDone)
        </div>        
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Priority, new { @class = "col-sm-1 control-label" })
        <div class="col-sm-11">
            @*@Html.DropDownList("Priority", String.Empty)*@
            @Html.DropDownListFor(x => x.Priority, (SelectList)ViewBag.Priority, "Select", new { @class = "form-control" })
        </div>        
    </div>

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
}