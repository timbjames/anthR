@model List<anthR.Web.Models.Core.MasterSite>
@{
    ViewBag.Title = "Home Page";
}

<div class="row">

    <div class="col-md-6">

        <div>
            <p>
                @Html.ActionLink("Create New Master Site", "Create", "MasterSite", null, new { @class = "btn btn-xs btn-primary" })
            </p>
        </div>

        @if (Model.Count == 0)
        {
            <h4>No Master Sites</h4>
        }
        else
        {
            <table class="table">
                <caption>Master Sites</caption>
                <tr>
                    @*<th>ID</th>*@
                    <th>Master Site</th>
                    <th>Master Site Id</th>
                    <th class="text-right">Options</th>
                </tr>
                @foreach (var masterSite in Model)
                {                    
                    <tr>
                        @*<td>@masterSite.MasterSiteId</td>*@
                        <td>@masterSite.Name</td>
                        <td>@masterSite.LiveBidMasterSiteId</td>
                        <td class="text-right">
                            @Html.ActionLink("Details", "Details", "Todo", new { id = masterSite.MasterSiteId }, new { @class = "btn btn-xs btn-primary", role = "button" })
                            @Html.ActionLink("Edit", "Edit", "Todo", new { id = masterSite.MasterSiteId }, new { @class = "btn btn-xs btn-primary", role = "button" })
                            @*@Html.ActionLink("Delete", "Delete", "Todo", new { id = todo.Id }, new { @class = "btn btn-xs btn-primary", role = "button" })*@
                        </td>
                    </tr>
                }
            </table>
        }
    </div>


</div>
