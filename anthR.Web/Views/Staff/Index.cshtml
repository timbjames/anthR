@model IEnumerable<anthR.Web.Models.Core.Staff>

@{
    ViewBag.Title = "Index";
}

<p>
    @Html.ActionLink("Add Staff Member", "Create", "Staff", null, new { @class = "btn btn-xs btn-primary" })
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th class="text-right">Options</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img class="gravatar" 
                 src="@string.Format("https://secure.gravatar.com/avatar/{0}?s=30&d=mm", item.GravatarHash)" 
                 title="Gravatar. if you don't have one, then added one for your work email!" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            <div class="btn-group pull-right">
                <button class="btn btn-default btn-sm dropdown-toggle" type="button" data-toggle="dropdown" aria-expanded="false">
                    <span class="glyphicon glyphicon-menu-hamburger"></span>
                </button>
                <ul class="dropdown-menu" role="menu">
                    <li>@Html.ActionLink("Edit", "Edit", new { id = item.Id }, null)</li>
                    <li>@Html.ActionLink("Details", "Details", new { id = item.Id }, null)</li>   
                    <li>@Html.ActionLink("Delete", "Delete", new { id = item.Id }, null)</li>
                </ul>
            </div>            
        </td>
    </tr>
}

</table>
